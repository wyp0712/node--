<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>
        <%= title%>
    </title>

    <!-- BOOTSTRAP STYLES-->
    <link href="/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="/assets/css/font-awesome.css" rel="stylesheet" />
    <!--CUSTOM BASIC STYLES-->
    <link href="/assets/css/basic.css" rel="stylesheet" />
    <!--CUSTOM MAIN STYLES-->
    <link href="/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='https://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />
</head>

<body>
    <div id="wrapper">
        <% include ../common/header.ejs %>
            <!-- /. NAV SIDE  -->

            <div id="page-wrapper">

                <div id="page-inner">
                    <div class="row">
                        <div class="col-md-12">
                            <h1 class="page-head-line">学院管理</h1>
                            <h1 class="page-subhead-line">自动添加学院</h1>

                        </div>
                    </div>
                    <!-- /. ROW  -->
                    <div class="row">
                        <div class="col-md-8 col-sm-8 col-xs-16">
                            <div class="panel panel-info">
                                <div class="panel-heading">
                                    添加
                                </div>
                                <div class="panel-body">
                                    <form role="form">
                                        <div class="form-group">
                                            <label>学院</label>
                                            <input class="form-control" type="text" id="college">
                                            <!-- <p class="help-block">Help text here.</p> -->
                                        </div>
                                        <div class="form-group">
                                            <label>学院标识</label>
                                            <input class="form-control" type="text" id="collegeSign">
                                            <!-- <p class="help-block">Help text here.</p> -->
                                        </div>

                                        <!-- <div class="form-group">
                                            <label>选择图片</label>
                                            <input type="file" id="imgFile">
                                            <p class="help-block">
                                                <img src="" alt="" id="preImg" width="300">
                                            </p>
                                        </div>
                                        <div class="form-group">
                                            <label>合作商家条约</label>
                                            <textarea class="form-control" rows="3" id="decription"></textarea>
                                        </div> -->


                                        <button type="submit" class="btn btn-info" id="send">发送 </button>

                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /. PAGE WRAPPER  -->
                </div>
                <!-- /. WRAPPER  -->

            </div>

            <script src="/assets/js/jquery-1.10.2.js"></script>
            <!-- BOOTSTRAP SCRIPTS -->
            <script src="/assets/js/bootstrap.js"></script>
            <!-- METISMENU SCRIPTS -->
            <script src="/assets/js/jquery.metisMenu.js"></script>
            <!-- CUSTOM SCRIPTS -->
            <script src="/assets/js/custom.js"></script>

            <script>
                $(document).ready(() => {

                    $("#send").click((e) => {
                        e.preventDefault()
                        if ($("#college").val() && $("#collegeSign").val()) {
                            $.ajax({
                                url: '/api/back/classManage/insertCollege', //用于文件上传的服务器端请求地址 
                                type: "post",
                                data: {
                                    cnname: $("#college").val(),
                                    enname: $("#collegeSign").val()
                                },

                                success: function(data) //服务器成功响应处理函数 
                                    {
                                        if (data.code == "10101") {
                                            alert("添加成功")
                                        } else {
                                            alert("添加失败")
                                        }
                                    },
                                error: function(data, status, e) //服务器响应失败处理函数 
                                    {
                                        alert(e);
                                    }
                            })
                        }


                    })
                })
            </script>
</body>




</html>